<center>
  <table class="roundedCorners">
    <thead>
      <tr>
        <td>
          <%= form_with(model: @subject, local: true) do |f| %>
            <% if @subject.errors.any? %>
              <h2><%= pluralize(@subject.errors.count, "error") %> prohibited this user from being saved:</h2>
              <ul>
                <% @subject.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>

            <div class="field">
              <%= f.label :branch %><br />
              <%= f.collection_select(:branch_id, Branch.all, :id, :name, :prompt => "Select Branch") %>
            </div>

            <div class="field">
              <%= f.label :semester %><br />
              <%= f.collection_select(:semester_id, Semester.all, :id, :sem, :prompt => "Select Semester") %>
            </div>

            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>
            <br/>
            <div class="actions">
              <%= f.submit "Add Subject", id: "1", class: "btn btn-primary btn-xs" %>
            </div>
          <% end %>
        </td>
      </tr>
    </thead>
  </table>
</center>
